<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My CRUD in NodeJS</title>
</head>
<style>
    *{
        margin: 0px; 
        padding: 0px;
        box-sizing: border-box;
    }
    
    body, html{
        height: 100%;
        font-family: Poppins, sans-serif;
    }
    
    body{
        background: #a2669d;
        font-style: normal;
        padding-bottom:30px;
        padding-top: 30px;
    }
    
    h1{
        font-weight: bold;
        word-spacing: 8px;
    }
    h3{
        word-spacing: 8px
    }
    label{
        font-size: 18px;
    }
    
    input[type=date]{
        font-size: 15px;
        padding: 6px;
    }
    
    select{
        font-size: 16px;
        padding: 10px;
    }
    
    .title{
        padding-top: 50px;
        display: block;
        font-family: Poppins;
        font-size: 40px;
        color: #333333;
        line-height: 1.2;
        text-align: center;
    }
    
    .wrap-form{
        width: 700px;
        background-color: #f0f0f0;
        border-radius: 10px;
        overflow: hidden;
        padding-bottom: 40px;
    }
    
    .input-form{
        width: 500px;
    
    }
    
    input[type=text], input[type=number] {
        font-size: 19px;
        width: 50%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    
    input[type=submit]{
        width: 30%;
        background-color: #ddd;
        color: #000;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    
    
    </style>

<body>
    <center>
        <div class="wrap-form">
        <div>
            <h1 class="title" align="center">Alunos Matriculados</h1>
        </div>
    <table border="1">
        <thead>
            <tr>
                <td>Código de Acesso</td>
                <td>Nome Completo</td>
                <td>Data de Nacimento</td>
                <td>Sexo</td>
                <td>Ação</td>
            </tr>
        </thead>
        <tbody>
            <% crud.forEach(function(details) { %>
                <tr>
                    <td>
                        <%= details.roll %>
                    </td>
                    <td>
                        <%= details.name %>
                    </td>
                    <td>
                        <%= details.dob %>
                    </td>
                    <td>
                        <%= details.sex %>
                    </td>
                    <td><a href="/edit/<%= details._id %>">Editar</a></br><a href="/delete/<%= details._id %>">Deletar</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table> <button><a href="/index">Novo</a></button>
</body>

</html>
